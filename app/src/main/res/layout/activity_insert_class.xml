<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_insert_class"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.josef.passnopass.Insert_class"
    android:weightSum="1">

    <TextView
        android:text="Class Name Ex: CECS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/textView2"
        android:layout_weight="0.06" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textAlignment="center"
        android:id="@+id/classText"
        tools:text="CECS" />

    <TextView
        android:text="Class Num Ex: 229"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/courseNumText"
        android:textAlignment="center"
        android:layout_weight="0.09" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/courseNumE"
        android:textAlignment="center"
        android:layout_weight="0.06"
        tools:text="229" />

    <Button
        android:text="Add Class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addingBut" />
</LinearLayout>
